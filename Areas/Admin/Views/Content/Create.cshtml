</div>

<div>
    <a asp-action="Index" asp-controller="CategoryItem" asp-route-categoryId="@Model.CategoryId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
